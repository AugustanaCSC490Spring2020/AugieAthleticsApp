<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <androidx.cardview.widget.CardView
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="8dp"
        android:background="@color/navy"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViResults"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/textResultTeam1"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="130dp"
            android:text="Title"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textRScore1"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="135dp"
            android:layout_marginBottom="130dp"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textResultTeam2"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="60dp"
            android:text="Title2"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textRScore2"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="135dp"
            android:layout_marginBottom="60dp"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textLocationR"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="430dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="20dp"
            android:text="Location"
            android:textColor="@color/navy"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textDateR"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="16dp"
            android:text="Date"
            android:textColor="@color/navy"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textTimeR"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="16dp"
            android:text="Time"
            android:textColor="@color/navy"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textVs"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="120dp"
            android:text="vs"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="83dp"
            android:layout_height="91dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            app:srcCompat="@drawable/viking_logo" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>